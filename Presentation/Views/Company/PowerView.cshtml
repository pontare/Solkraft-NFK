@model List<ProducedCompanyPower>
<!-------------try.get true/false----------->
@{
    Dictionary<string, double> companyPowerDict = new Dictionary<string, double>();
    List<string> företag = new List<string>() { "Husqvarna" };
    foreach (var elem in företag)
    {
        companyPowerDict.Add(elem, 0);
    }
    foreach (var elem in Model)
    {
        companyPowerDict[elem.Företag] += Math.Round(elem.Energi);
    }

}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", { packages: ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {

            var data = google.visualization.arrayToDataTable([
                ["Företag", "Kilowatttimmar", { role: "style" }],
                ["Husqvarna",@companyPowerDict["Husqvarna"], "#0072ce"]
            ]);


        var view = new google.visualization.DataView(data);
        view.setColumns([0, 1,
            {
                calc: "stringify",
                sourceColumn: 1,
                type: "string",
                role: "annotation"
            },
            2]);

        var options = {
            title: "Producerade Kilowatttimmar",
            width: 400,
            height: 290,
            bar: { groupWidth: "95%" },
            legend: { position: "none" },
        };
        var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values"));
        chart.draw(view, options);
    }
</script>

